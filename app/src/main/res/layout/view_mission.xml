            </LinearLayout>
            <ImageButton
                android:id="@+id/btn_flight_camera_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_flight_record"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_csetting_selector"
                android:layout_gravity="right"
                android:visibility="visible" />
        </LinearLayout>

