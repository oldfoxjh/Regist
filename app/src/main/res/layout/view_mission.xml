        <EditText
            android:id="@+id/search_takeoff_point"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:drawableRight="@android:drawable/ic_menu_search"
            android:background="#000000"
            android:imeOptions="actionSearch"
            android:alpha="0.8"
            android:textColor="#ffffff"
            android:lines="1"
            android:paddingLeft="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_bar"/>

        <LinearLayout
            android:id="@+id/container_function"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_bar">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/btn_area_back"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="12dp"
                    android:visibility="invisible"
                    android:background="@drawable/btn_backward_selector" />
                <Button
                    android:id="@+id/btn_load_geo_json_from_server"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/btn_download_selector" />

                <Button
                    android:id="@+id/btn_load_geo_json"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/btn_open_selector" />

